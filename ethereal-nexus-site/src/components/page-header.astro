---
import { cn } from "@/lib/utils";

import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
  heading: string;
  text?: string;
  className?: string;
}
const { heading, text, className, ...attrs } = Astro.props;
---

<div class={cn("space-y-4", className)} {...attrs}>
  <h1 class="inline-block font-heading text-4xl lg:text-5xl">
    {heading}
  </h1>
  {text && <p class="text-xl text-muted-foreground">{text}</p>}
</div>
<hr class="my-4" />