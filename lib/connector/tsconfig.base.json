{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@ethereal-nexus/dialog-ui-core": ["./packages/dialog-ui-core/src"],
      "@ethereal-nexus/dialog-ui-spectrum": ["./packages/dialog-ui-spectrum/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
